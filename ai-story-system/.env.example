# =============================================================================
# AI STORY GENERATION SYSTEM - ENVIRONMENT TEMPLATE
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ai_story_system

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration for user authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# CORS Configuration for cross-origin requests
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# =============================================================================
# AI PROVIDERS CONFIGURATION
# =============================================================================
# NOTE: Currently, only the MOCKED provider is implemented for testing.
# The system architecture supports multiple AI providers, but real provider
# integrations (OpenAI, Anthropic, Google, etc.) are not yet implemented.
#
# The variables below serve as templates for future provider implementations.
# To use the system, set DEFAULT_AI_PROVIDER=mocked

# Example AI Provider Configuration (Template for future implementations)
# EXAMPLE_PROVIDER_API_KEY=your_api_key_here
# EXAMPLE_PROVIDER_BASE_URL=https://api.example.com
# EXAMPLE_PROVIDER_MODEL=model-name
# EXAMPLE_PROVIDER_MAX_TOKENS=4000
# EXAMPLE_PROVIDER_TEMPERATURE=0.7
# EXAMPLE_PROVIDER_ENABLED=false

# =============================================================================
# AI GLOBAL SETTINGS
# =============================================================================
# Default provider for new stories (currently only 'mocked' is available)
DEFAULT_AI_PROVIDER=mocked

# AI System Behavior
AI_ENABLE_FALLBACK=true
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000
AI_ENABLE_CACHING=true
AI_CACHE_EXPIRY_MINUTES=60
AI_ENABLE_MODERATION=true
AI_ENABLE_COST_TRACKING=true
